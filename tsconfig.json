{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "*": ["src/*"],
      "app/*": ["app/*"],
      "pages/*": ["pages/*"],
      "shared/*": ["shared/*"],
      "widgets/*": ["widgets/*"],
      "features/*": ["features/*"],
      "entities/*": ["entities/*"],
      "components/*": ["components/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "noImplicitAny": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    ".eslintrc.js",
//    "./webpack.config.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./config/**/**/*.ts",
    "./config/jest/*"
  ],
  "exclude": [
    "node_modules",
    "storybook",
    "build",
    "public"
  ]
}
