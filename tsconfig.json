{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "*": ["src/*"],
      "app/*": ["app/*"],
      "pages/*": ["pages/*"],
      "shared/*": ["shared/*"],
      "widgets/*": ["widgets/*"],
      "features/*": ["features/*"],
      "components/*": ["components/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noImplicitAny": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    ".eslintrc.js",
    "./webpack.config.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./config/**/**/*.ts",
    "./config/jest/setupTests.ts"
  ],
  "exclude": ["node_modules", "dist", ".yalc", "build", "public", "scripts"]
}
