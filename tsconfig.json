{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "*": ["src/*"],
      "app/*": ["app/*"],
      "pages/*": ["pages/*"],
      "shared/*": ["shared/*"],
      "widgets/*": ["widgets/*"],
      "features/*": ["features/*"],
      "components/*": ["components/*"],
      "node_modules/eslint/lib/cli-engine/formatters/stylish/*": ["stylish/*"],
      "node_modules/strip-ansi/*": ["strip-ansi/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noImplicitAny": true
  },
  "ts-node": {
//    "esm": true,
//    "TranspileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    ".eslintrc.js",
    "./webpack.config.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
//    "./**/**/*.tsx",
    "./config/**/**/*.ts"
  ],
    "exclude": ["node_modules", "dist", ".yalc", "build", "public", "scripts"]
}
