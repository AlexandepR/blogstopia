{
  "compilerOptions": {
//    "outDir": "./dist/",
    "module": "esnext",
    "target": "es5",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "preferAbsolute": true,
    "paths": {
      "./src/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,

    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,

    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

  },
  "include": [
    "src"
  ]
}
