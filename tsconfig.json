{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "*": ["src/*"],
      "app/*": ["app/*"],
      "pages/*": ["pages/*"],
      "shared/*": ["shared/*"],
      "widgets/*": ["widgets/*"],
      "features/*": ["features/*"],
      "components/*": ["components/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noImplicitAny": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
    }
  },
  "include": [
    ".eslintrc.js",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/components/*.tsx",
    "./src/components",
    "./**/**/*.tsx",
